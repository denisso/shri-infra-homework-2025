# Базовый образ
FROM node:20-alpine
# Рабочая директория
WORKDIR /app
# Копируем зависимости
COPY package*.json ./
# Установка зависимостей
RUN npm ci
# Копируем остальной код
COPY . .
# Сборка (если есть)
RUN npm run build
# Открываем порт (если используется, например, 3000)
EXPOSE 3000
# Команда запуска
CMD ["npm", "start"]
